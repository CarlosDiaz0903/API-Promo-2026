FROM node:18

# Establece el directorio de trabajo en el contenedor dentro de /app
WORKDIR /app

# Copia los archivos de dependencias desde src
COPY package*.json ./

# Instala las dependencias
RUN npm install

# Copia el resto de los archivos desde src
COPY . .

# Expone el puerto que usará la aplicación
EXPOSE 3000

# Inicia la aplicación apuntando a server.js dentro de /app
CMD ["node", "server.js"]